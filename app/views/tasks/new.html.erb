<h1>Complet your new task</h1>
<%=form_for(@task) do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title %>
  </div>
  <div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details %>
  </div>
  <div class="form-group form-check">
  <%= f.check_box :completed %> 
  </div>
  <%= f.submit %>
  
<% end %>

<div class="btn btn-light"><%=link_to "Back to list", tasks_path %></div>
