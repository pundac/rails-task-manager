
<h1>All your tasks</h1>
<ul class=" pl-5">
  
  <% @tasks.each do |task|%>
  <li>
       <%if task.completed ==true%>
            <i class="far fa-check-square"></i> 
        <%else%>
            <i class="far fa-square"></i> 
        <%end%>
        <%=link_to task.title, task_path(task) %>
        <%= link_to task_path(task), method: :delete, data: { confirm: "Delete #{task.title}?" } do %>
        <i class="fa fa-trash-o" aria-hidden="true"></i>
           <% end %>
    <%end%>
  </li>
</ul>
<div class="btn btn-light"><%=link_to "Add a new task", new_task_path %>
</div>